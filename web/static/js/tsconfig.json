{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom",
      "ES2015"
    ],
    "noEmit": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ]
}
